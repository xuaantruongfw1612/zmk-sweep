/*
 * GPIO mapping fixed based on user-provided pinout
 * Rows (diode direction): 009 106 104 011 100
 * Columns (switch): 115 113 111 010
 */

#include <dt-bindings/zmk/matrix_transform.h>
#include <layouts/cuddlykeyboards/ferris.dtsi>

&cuddlykeyboards_ferris_layout {
    transform = <&default_transform>;
};

 / {
    chosen {
        zmk,kscan = &kscan0;
    };

    /* matrix: 5 rows Ã— 4 columns = 20 keys */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <4>;
        rows = <5>;

        /* RC(row, col) */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;

        /* ROWS (diode rows) */
        row-gpios =
            <&pro_micro  9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* ROW0 = 009 */
            <&pro_micro 22 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* ROW1 = 106 = P1.06 = 22 */
            <&pro_micro 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* ROW2 = 104 = P1.04 = 20 */
            <&pro_micro 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* ROW3 = 011 */
            <&pro_micro 30 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;   /* ROW4 = 100 = P1.00 = 30 */

        /* COLUMNS (switch columns) */
        col-gpios =
            <&pro_micro 31 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* COL0 = 115 = P1.15 = 31 */
            <&pro_micro 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* COL1 = 113 = P1.13 = 29 */
            <&pro_micro 27 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,   /* COL2 = 111 = P1.11 = 27 */
            <&pro_micro 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;   /* COL3 = 010 = P0.10 */
    };
};

