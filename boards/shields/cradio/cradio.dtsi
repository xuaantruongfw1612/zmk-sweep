/*
 * GPIO mapping fixed based on user-provided pinout
 * Rows (diode direction): 009 106 104 011 100
 * Columns (switch): 115 113 111 010
 */

#include <dt-bindings/zmk/matrix_transform.h>
#include <layouts/cuddlykeyboards/ferris.dtsi>

&cuddlykeyboards_ferris_layout {
    transform = <&default_transform>;
};

 / {
    chosen {
        zmk,kscan = &kscan0;
    };

    /* matrix: 5 rows × 4 columns = 20 keys */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <4>;
        rows = <5>;

        /* RC(row, col) */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3)
        >;
    };

        kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;

        input-gpios =
            /* ROWS – diode nằm theo chiều dọc, nối bên trái */
              <&pro_micro 115 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro 113 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro 111 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro  10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>

            /* COLUMNS – từ trái sang phải */
            , <&pro_micro   9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro 106 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro 104 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro  11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&pro_micro 100 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            ;
    };
};

