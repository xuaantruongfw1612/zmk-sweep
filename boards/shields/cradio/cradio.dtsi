#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    /* === MATRIX TRANSFORM === */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";

        /* 4 cột x 5 hàng = 20 phím */
        columns = <4>;
        rows = <5>;

        /*
         * Mapping RC(row, col)
         * Hàng: LEFT → RIGHT
         * Cột: TOP → BOTTOM
         */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3)
        >;
    };

    /* === GPIO MATRIX CONFIG === */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";

        /* ROWS (hàng trái → phải) */
        row-gpios =
            <&gpio0  9   GPIO_ACTIVE_LOW>,   /* 009 */
            <&gpio0 106  GPIO_ACTIVE_LOW>,   /* 106 */
            <&gpio0 104  GPIO_ACTIVE_LOW>,   /* 104 */
            <&gpio0 11   GPIO_ACTIVE_LOW>,   /* 011 */
            <&gpio0 100  GPIO_ACTIVE_LOW>;   /* 100 */

        /* COLS (cột từ trên → xuống) */
        col-gpios =
            <&gpio0 115 GPIO_ACTIVE_LOW>,    /* 115 */
            <&gpio0 113 GPIO_ACTIVE_LOW>,    /* 113 */
            <&gpio0 111 GPIO_ACTIVE_LOW>,    /* 111 */
            <&gpio0 10  GPIO_ACTIVE_LOW>;    /* 010 */
    };
};

